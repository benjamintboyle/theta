<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" strict="true" name="ThetaEngine"
	packages="">
	<Appenders>
		<Appender type="RollingFile" name="MainLogFile" fileName="logs/test/TestThetaEngine.log"
			filePattern="logs/test/$${date:yyyy-MM}/%d{yyyy-MM-dd}_%i_TestThetaEngine.log.gz">
			<Layout type="PatternLayout">
				<Pattern>%highlight{%d %p [%t] %C - %m%n}</Pattern>
			</Layout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
				<OnStartupTriggeringPolicy />
			</Policies>
		</Appender>
		<Appender type="RollingFile" name="TickLogFile" fileName="logs/test/TestTick.log"
			filePattern="logs/test/$${date:yyyy-MM}/%d{yyyy-MM-dd}_%i_TestTick.log.gz">
			<Layout type="PatternLayout">
				<Pattern>%highlight{%d %p [%t] %C - %m%n}</Pattern>
			</Layout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
				<OnStartupTriggeringPolicy />
			</Policies>
		</Appender>
		<Appender type="RollingFile" name="BrokerLogFile" fileName="logs/test/TestRawBroker.log"
			filePattern="logs/test/$${date:yyyy-MM}/%d{yyyy-MM-dd}_%i_TestRawBroker.log.gz">
			<Layout type="PatternLayout">
				<Pattern>%m</Pattern>
			</Layout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
				<OnStartupTriggeringPolicy />
			</Policies>
		</Appender>
	</Appenders>

	<Loggers>
		<Logger name="brokers.interactive_brokers.IbLogger" level="trace"
			additivity="false">
			<AppenderRef ref="BrokerLogFile" />
		</Logger>
		<Logger name="brokers.interactive_brokers.tick.IbTickHandler"
			level="trace" additivity="false">
			<AppenderRef ref="TickLogFile" />
		</Logger>

		<Root level="trace">
			<AppenderRef ref="MainLogFile" />
		</Root>
	</Loggers>

</Configuration>