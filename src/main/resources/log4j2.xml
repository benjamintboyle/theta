<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" strict="true" name="ThetaEngine"
	packages="">

	<Appenders>
		<Appender type="File" name="MainLogFile" fileName="logs/ThetaEngine.log">
			<Layout type="PatternLayout">
				<Pattern>%d %p [%t] %C - %m%n</Pattern>
			</Layout>
		</Appender>
		<Appender type="File" name="BrokerLogFile" fileName="logs/RawBroker.log">
			<Layout type="PatternLayout">
				<Pattern>%d %p [%t] %C - %m%n</Pattern>
			</Layout>
		</Appender>
		<Appender type="File" name="TickLogFile" fileName="logs/Tick.log">
			<Layout type="PatternLayout">
				<Pattern>%d %p [%t] %C - %m%n</Pattern>
			</Layout>
		</Appender>
	</Appenders>

	<Loggers>
		<Logger name="brokers.interactive_brokers.IbLogger" level="trace"
			additivity="false">
			<AppenderRef ref="BrokerLogFile" />
		</Logger>
		<Logger name="brokers.interactive_brokers.IbTickHandler" level="trace"
			additivity="false">
			<AppenderRef ref="TickLogFile" />
		</Logger>

		<Root level="trace">
			<AppenderRef ref="MainLogFile" />
		</Root>
	</Loggers>

</Configuration>